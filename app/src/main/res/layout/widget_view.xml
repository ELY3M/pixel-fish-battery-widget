<RelativeLayout
    android:id="@+id/widget_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:focusable="true">

    <ImageView
        android:id="@+id/percent100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/battery_100"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/percent90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/battery_90"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/percent80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/battery_80"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/percent70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/battery_70"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/percent60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/battery_60"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/percent50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/battery_50"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/percent40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/battery_40"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/percent30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/battery_30"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/percent20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/battery_20"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/percent10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/battery_10"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/charge_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/charging"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/charge_view"
        android:layout_centerHorizontal="true"
        android:src="@drawable/space"
        android:visibility="visible" />

    <TextView
        android:id="@+id/batterytext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/charge_view"
        android:layout_centerHorizontal="true"
        android:gravity="center|center"
        android:maxLines="1"
        android:textColor="#00FFFF"
        android:textSize="15sp"
        android:textStyle="bold"
        android:typeface="sans"/>

</RelativeLayout>